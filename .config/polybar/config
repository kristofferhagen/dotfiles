bar-used-foreground-2 = ${colors.dark-yellow}
bar-used-foreground-3 = ${colors.light-red}
bar-used-foreground-4 = ${colors.dark-red}
bar-used-indicator = |
bar-used-fill = ─
bar-used-empty = ─
bar-used-empty-foreground = ${colors.background-alt}


[module/temperature]
type = internal/temperature
warn-temperature = 80

; Available tags:
;   <label> (default)
;   <ramp>
format = <ramp><label>

; Available tags:
;   <label-warn> (default)
;   <ramp>
format-warn = <ramp><label-warn>

; Available tokens:
;   %temperature% (default, in °C)
;   %temperature-c%   (temperature, in °C)
;   %temperature-f%   (temperature, in °F)
label = %temperature%

; Available tokens:
;   %temperature% (default, in °C)
;   %temperature-c%   (temperature, in °C)
;   %temperature-f%   (temperature, in °F)
label-warn = %temperature%
label-warn-foreground = ${colors.light-red}
format-warn-underline = ${colors.light-red}

; Requires the <ramp> tag
; The icon selection will range from 0 to `warn-temperature`
; with the current temperature as index.
ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-3 = " "
ramp-4 = " "

ramp-0-foreground = ${colors.foreground-alt}
ramp-1-foreground = ${colors.foreground-alt}
ramp-2-foreground = ${colors.foreground-alt}
ramp-3-foreground = ${colors.foreground-alt}
ramp-4-foreground = ${colors.light-red}


; TODO: Rename to a more generic name since this has broader support than just spotify.
[module/spotify]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/usr/bin/env sh -c [command]")
exec = /home/kristoffer/.config/polybar/spotify.sh

; Will the script output continous content?
; Default: false
tail = false

; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
interval = 1

; Available tokens:
;   %counter%
;   %pid%
;
; "click-(left|middle|right)" will be executed using "/usr/bin/env sh -c [command]"
;TODO: use a variable for workspace identifier?
click-left = i3-msg "workspace 10:  "
;click-left = i3-msg "workspace number 10"


[module/microphone]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/usr/bin/env sh -c [command]")
exec = /home/kristoffer/.config/polybar/microphone.sh

; Will the script output continous content?
; Default: false
tail = true

; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
;interval = 2

; Available tags:
;   <output> - deprecated
;   <label> (default)
format = <label>
format-foreground = ${colors.dark-red}
format-underline = ${colors.dark-red}

; Available tokens:
;   %counter%
;   %pid%
;
; "click-(left|middle|right)" will be executed using "/usr/bin/env sh -c [command]"
click-left = pactl set-source-mute 2 toggle



; vim: ft=cfg: set syntax=dosini:

[colors]
background = #50000000
background-alt = ${self.black}
foreground = #ffffff
foreground-alt = #aaffffff
primary = ${self.blue}
secondary = ${self.green}
alert = ${self.dark-red}
alert-underline = ${self.light-red}
col = #00f

black = #282c34
white = #abb2bf
light-red = #e06c75
dark-red = #be5046
green = #98c379
light-yellow = #e5c07b
dark-yellow = #d19a66
blue = #61afef
magenta = #c678dd
cyan = #56b6c2
gutter-gray = #4b5263
comment-gray = #5c6370


[settings]
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true


[bar/desktop-top]
; Put the bar at the bottom of the screen
bottom = false

; Fallback click handlers that will be called if
; there's no matching module handler found.
; Switch workspace using the scroll wheel.
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; Modules are added to one of the available blocks
;   modules-left = cpu ram
;   modules-center = xwindow xbacklight
;   modules-right = ipc clock
modules-left = i3 xwindow
modules-center = date
modules-right = spotify microphone volume filesystem memory cpu temperature ip-address

; Dimension defined as pixel value (e.g. 35) or percentage (e.g. 50%)
width = 100%
height = 22

; The separator will be inserted between the output of each module
separator =

; Prefer fixed center position for the `modules-center` block
; When false, the center position will be based on the size of the other blocks.
fixed-center = true

; Background argb color (e.g. #f00, #ff992a, #ddff1023)
background = ${colors.background}

; Foreground argb color (e.g. #f00, #ff992a, #ddff1023)
foreground = ${colors.foreground}

; Under-/overline pixel size and argb color
; Individual values can be defined using:
;   {overline,underline}-size
;   {overline,underline}-color
line-size = 2

; Values applied to all borders
; Individual side values can be defined using:
;   border-{left,top,right,bottom}-size
;   border-{left,top,right,bottom}-color
border-size = 0
border-color = #00000000

border-bottom-size = 1
border-bottom-color = #80000000

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding-left = 0
padding-right = 2

; Number of spaces to add before/after each module
; Individual side values can be defined using:
;   module-margin-{left,right}
module-margin-left = 4
module-margin-right = 4

; Fonts are defined using <font-name>;<vertical-offset>
; Font names are specified using a fontconfig pattern.
;   font-0 = NotoSans-Regular:size=8;2
;   font-1 = MaterialIcons:size=10
;   font-2 = Termsynu:size=8;-1
;   font-3 = FontAwesome:size=10
; See the Fonts wiki page for more details
font-0 = "NotoSans-Regular:size=8;1"
font-1 = "FontAwesome:size=10;2"
; for bar character support
font-2 = "DejaVu Sans Mono:size=6;1"


[module/i3]
type = internal/i3

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Mode indicator when not in default mode
; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-mode-padding = 3

; Active workspace on focused monitor
; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name%
label-focused-background = #66000000
label-focused-underline = ${colors.primary}
label-focused-padding = 3

; Inactive workspace on any monitor
; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %name%
label-unfocused-padding = 3

; Active workspace on unfocused monitor
; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; Workspace with urgency hint set
; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-underline = ${colors.alert-underline}
label-urgent-padding = 3


[module/date]
type = internal/date

; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = %%{F#fff}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%{F#99}:%S%%{F-}


[module/xwindow]
type = internal/xwindow

; Available tokens:
;   %title%
; Default: %title%
label = %title:0:100:...%


[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /

; Seconds to sleep between updates
; Default: 30
interval = 30

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <bar-used>
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %mountpoint%: %free%

; Available tags:
;   <label-unmounted> (default)
format-unmounted = <label-unmounted>
format-unmounted-prefix = " "
format-unmounted-prefix-foreground = ${colors.foreground-alt}

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

; Only applies if <bar-used> is used
bar-used-width = 10
bar-used-foreground-0 = ${colors.green}
bar-used-foreground-1 = ${colors.green}
bar-used-foreground-2 = ${colors.green}
bar-used-foreground-3 = ${colors.green}
bar-used-foreground-4 = ${colors.green}
bar-used-foreground-5 = ${colors.light-yellow}
bar-used-foreground-6 = ${colors.dark-yellow}
bar-used-foreground-7 = ${colors.light-red}
bar-used-foreground-8 = ${colors.dark-red}
bar-used-foreground-9 = ${colors.dark-red}
bar-used-indicator = |
bar-used-fill = ─
bar-used-empty = ─
bar-used-empty-foreground = ${colors.background-alt}


[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 1

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label><ramp-coreload>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = "cpu "
label-foreground = ${colors.foreground-alt}

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

ramp-coreload-0-foreground = ${colors.green}
ramp-coreload-1-foreground = ${colors.green}
ramp-coreload-2-foreground = ${colors.green}
ramp-coreload-3-foreground = ${colors.green}
ramp-coreload-4-foreground = ${colors.light-yellow}
ramp-coreload-5-foreground = ${colors.dark-yellow}
ramp-coreload-6-foreground = ${colors.light-red}
ramp-coreload-7-foreground = ${colors.dark-red}

ramp-coreload-0-font = 3
ramp-coreload-1-font = 3
ramp-coreload-2-font = 3
ramp-coreload-3-font = 3
ramp-coreload-4-font = 3
ramp-coreload-5-font = 3
ramp-coreload-6-font = 3
ramp-coreload-7-font = 3


